{
  "manifest_version": 3,
  "name": "Simple Sidebar Extension",
  "version": "1.0.0",
  "description": "A simple Chrome extension with sidebar functionality",
  "action": {
    "default_title": "Click to open sidebar"
  },
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
